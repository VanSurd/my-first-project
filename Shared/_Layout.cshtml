<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PeopleSearchSite</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .top-bar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 56px;
            padding: 0 20px;
            background-color: #1e1e1e;
            color: #ffffff;
            position: relative;
            z-index: 1000;
        }

        .top-bar-title {
            font-size: 20px;
            font-weight: bold;
        }

        .menu-button {
            background: none;
            border: none;
            color: #ffffff;
            font-size: 26px;
            cursor: pointer;
        }

        .menu-dropdown {
            position: absolute;
            top: 56px;
            right: 20px;
            background-color: #2b2b2b;
            border-radius: 8px;
            min-width: 180px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.4);
            display: flex;
            flex-direction: column;
        }

        .menu-dropdown a,
        .menu-dropdown button {
            padding: 12px 16px;
            text-decoration: none;
            color: #ffffff;
            background: none;
            border: none;
            text-align: left;
            width: 100%;
            cursor: pointer;
            font-size: 15px;
        }

        .menu-dropdown a:hover,
        .menu-dropdown button:hover {
            background-color: #3c3c3c;
        }

        .hidden {
            display: none;
        }

        .main-content {
            padding: 20px;
        }
    </style>
</head>
<body>

    <header class="top-bar">
        <div class="top-bar-title">
            Поиск людей
        </div>

        <div>
            <button id="menuButton" class="menu-button" type="button">☰</button>

            <div id="menuDropdown" class="menu-dropdown hidden">
                <a asp-controller="Search" asp-action="Index">Поиск</a>
                <a asp-controller="Admin" asp-action="Index">Управление</a>
                <a asp-controller="Users" asp-action="Index">Пользователи</a>

                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit">Выход</button>
                </form>
            </div>
        </div>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <script>
        const menuButton = document.getElementById('menuButton');
        const menuDropdown = document.getElementById('menuDropdown');

        menuButton.addEventListener('click', function (e) {
            e.stopPropagation();
            menuDropdown.classList.toggle('hidden');
        });

        document.addEventListener('click', function () {
            menuDropdown.classList.add('hidden');
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
