@model List<PeopleSearchSite.Models.Person>

@{
    Layout = "_Layout";
    ViewBag.Title = "Управление людьми (Admin)";
}

<h2>Управление людьми (Admin)</h2>

<p>
    <a href="/Admin/Create">Добавить человека</a>
</p>

<table>
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Дата рождения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.LastName</td>
                <td>@person.FirstName</td>
                <td>@person.MiddleName</td>
                <td>@person.BirthDate:yyyy-MM-dd</td>
                <td>
                    <a href="/Admin/Edit/@person.Id">Редактировать</a> |
                    <a href="/Admin/Delete/@person.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
